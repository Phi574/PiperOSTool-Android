<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- TÙY CHỌN KÍCH HOẠT QUẢN TRỊ VIÊN -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchDeviceAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kích hoạt Quản trị viên"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:thumbTint="#00FF00"
            app:trackTint="#333333" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Cấp quyền cao nhất cho ứng dụng để thực hiện các tác vụ đặc biệt (khóa màn hình, xóa dữ liệu...)."
            android:textColor="#B0B0B0"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="15dp"
            android:background="#333" />

        <!-- THÊM MỚI: TÙY CHỌN KHÓA VÂN TAY -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchFingerprint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khóa bằng vân tay"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:thumbTint="#00FF00"
            app:trackTint="#333333" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Yêu cầu xác thực vân tay mỗi khi mở ứng dụng để tăng cường bảo mật."
            android:textColor="#B0B0B0"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="15dp"
            android:background="#333" />

        <!-- THÊM MỚI: Mục Quản lý Quyền -->
        <LinearLayout
            android:id="@+id/btnPermissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="8dp"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cấp quyền &amp; Thông báo"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quản lý các quyền truy cập và tối ưu hóa hệ thống."
                android:textColor="#B0B0B0"
                android:textSize="12sp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
