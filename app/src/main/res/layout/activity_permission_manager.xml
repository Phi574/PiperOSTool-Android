<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_button_signup"
    android:backgroundTint="#2C2C2C"
    android:padding="20dp"
    android:layout_margin="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý Quyền &amp; Tối ưu hóa"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Các quyền đã được cấp:"
        android:textColor="#B0B0B0"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <!-- Danh sách các quyền sẽ được thêm vào đây bằng code -->
    <LinearLayout
        android:id="@+id/permission_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444"
        android:layout_marginVertical="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tối ưu hóa hệ thống:"
        android:textColor="#B0B0B0"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <!-- Tùy chọn Vô hiệu hóa Tiết kiệm Pin -->
    <LinearLayout
        android:id="@+id/btnDisableBatteryOptimization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_battery"
            app:tint="#00FF00"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:text="Tắt tối ưu hóa Pin"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- Tùy chọn Cho phép Autostart (Chạy nền) -->
    <LinearLayout
        android:id="@+id/btnAllowAutostart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp"
        android:layout_marginTop="10dp"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_autorenew"
            app:tint="#00FF00"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:text="Cho phép tự khởi chạy (Autostart)"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- ======== THÊM MỚI: TÙY CHỌN QUẢN LÝ THÔNG BÁO ======== -->
    <LinearLayout
        android:id="@+id/btnNotificationSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="8dp"
        android:layout_marginTop="10dp"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/notification"
            app:tint="#00FF00"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:text="Quản lý thông báo"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>
    <!-- ========================================================== -->


    <Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Đóng"
        android:backgroundTint="#444444"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"/>

</LinearLayout>
